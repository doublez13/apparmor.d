{{- define "qualifier" -}}
    {{- with .Priority -}}
        {{- "priority=" -}}{{ . }}{{ " " }}
    {{- end -}}
    {{- if .Audit -}}
        {{- "audit " -}}
    {{- end -}}
    {{- .Padding 0 -}}
    {{- if eq .AccessType "deny" -}}
        {{- "deny " -}}
    {{- end -}}
    {{- .Padding 1 -}}
{{- end -}}
